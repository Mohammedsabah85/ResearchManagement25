                $(this).after(counter);
                
                const updateCounter = () => {
                    const remaining = maxLength - $(this).val().length;
                    counter.text(`${remaining} حرف متبقي`);
                    counter.toggleClass('text-danger', remaining < 50);
                };
                
                $(this).on('input', updateCounter);
                updateCounter();
            }
        });

        // Store original values for change detection
        $('#editReviewForm input, #editReviewForm textarea, #editReviewForm select').each(function() {
            $(this).data('original-value', $(this).val());
        });

        // Warn before leaving with unsaved changes
        let formChanged = false;
        $('#editReviewForm input, #editReviewForm textarea, #editReviewForm select').on('change input', function() {
            formChanged = true;
        });

        $(window).on('beforeunload', function() {
            if (formChanged) {
                return 'لديك تغييرات غير محفوظة. هل تريد المغادرة؟';
            }
        });

        $('#editReviewForm').on('submit', function() {
            formChanged = false;
        });
    </script>
}

