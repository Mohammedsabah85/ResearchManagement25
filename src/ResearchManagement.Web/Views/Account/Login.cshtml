@model ResearchManagement.Application.DTOs.LoginDto
@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-graduation-cap fa-3x text-primary mb-3"></i>
                    <h3>تسجيل الدخول</h3>
                    <p class="text-muted">أدخل بياناتك للوصول إلى النظام</p>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="أدخل بريدك الإلكتروني" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">كلمة المرور</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" class="form-control" placeholder="أدخل كلمة المرور" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">تذكرني</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="fas fa-sign-in-alt me-2"></i>دخول
                    </button>

                    <div class="text-center">
                        <a asp-action="ForgotPassword" class="text-muted">هل نسيت كلمة المرور؟</a>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-2">ليس لديك حساب؟</p>
                    <a asp-action="Register" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus me-2"></i>إنشاء حساب جديد
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>