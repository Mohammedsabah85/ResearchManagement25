            // ✅ الحل الصحيح - Loading states for submit buttons
            $('form').on('submit', function() {
                var form = $(this);
                var submitBtn = form.find('button[type="submit"], input[type="submit"]');

                // التحقق من صحة الـ form أولاً
                if (form[0].checkValidity && !form[0].checkValidity()) {
                    return; // لا تفعل شيء إذا كان الـ form غير صحيح
                }

                if (submitBtn.length && !submitBtn.hasClass('btn-submitting')) {
                    // إضافة كلاس التحميل بعد تأخير قصير
                    setTimeout(function() {
                        submitBtn.addClass('btn-submitting');
                    }, 200);

                    // إعادة التفعيل بعد 15 ثانية كحد أقصى
                    setTimeout(function() {
                        submitBtn.removeClass('btn-submitting');
                    }, 15000);
                }
            });

            // منع الإرسال المتكرر
            $('form').on('submit', function(e) {
                var form = $(this);
                if (form.data('submitting')) {
                    e.preventDefault();
                    return false;
                }
                form.data('submitting', true);

                // إعادة تفعيل الإرسال بعد timeout
                setTimeout(function() {
                    form.removeData('submitting');
                }, 15000);
            });

