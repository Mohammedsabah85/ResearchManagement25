@model ResearchManagement.Web.Models.ViewModels.ReviewerDashboardViewModel
@{
    ViewData["Title"] = "لوحة تحكم المقيم";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-clipboard-check me-2"></i>لوحة تحكم المقيم</h2>
        <p class="text-muted">مراجعة وتقييم البحوث العلمية</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h3 class="mb-0">@Model.TotalReviews</h3>
                        <p class="mb-0">إجمالي المراجعات</p>
                    </div>
                    <div class="ms-3">
                        <i class="fas fa-clipboard-list fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h3 class="mb-0">@Model.CompletedReviews</h3>
                        <p class="mb-0">المراجعات المكتملة</p>
                    </div>
                    <div class="ms-3">
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h3 class="mb-0">@Model.PendingReviews</h3>
                        <p class="mb-0">المراجعات المعلقة</p>
                    </div>
                    <div class="ms-3">
                        <i class="fas fa-clock fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h3 class="mb-0">@Model.OverdueReviews</h3>
                        <p class="mb-0">المراجعات المتأخرة</p>
                    </div>
                    <div class="ms-3">
                        <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>إجراءات سريعة</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a href="@Url.Action("Index", "Review")" class="btn btn-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center" style="min-height: 120px;">
                            <i class="fas fa-list fa-2x mb-2"></i>
                            <h6 class="mb-0">جميع المراجعات</h6>
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="@Url.Action("Pending", "Review")" class="btn btn-outline-warning w-100 h-100 d-flex flex-column align-items-center justify-content-center" style="min-height: 120px;">
                            <i class="fas fa-clock fa-2x mb-2"></i>
                            <h6 class="mb-0">المراجعات المعلقة</h6>
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-secondary w-100 h-100 d-flex flex-column align-items-center justify-content-center" style="min-height: 120px;">
                            <i class="fas fa-user-edit fa-2x mb-2"></i>
                            <h6 class="mb-0">تحديث الملف الشخصي</h6>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pending Reviews -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>المراجعات المطلوبة</h5>
                <a href="@Url.Action("Index", "Review")" class="btn btn-sm btn-outline-primary">عرض الكل</a>
            </div>
            <div class="card-body">
                @if (Model.RecentReviews.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>عنوان البحث</th>
                                    <th>تاريخ التكليف</th>
                                    <th>الموعد النهائي</th>
                                    <th>الحالة</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var review in Model.RecentReviews)
                                {
                                    <tr>
                                        <td><strong>@review.Research.Title</strong></td>
                                        <td>@review.AssignedDate.ToString("yyyy/MM/dd")</td>
                                        <td>
                                            @{
                                                var isOverdue = review.Deadline < DateTime.UtcNow && !review.IsCompleted;
                                                var deadlineClass = isOverdue ? "text-danger" : "text-muted";
                                            }
                                            <span class="@deadlineClass">@review.Deadline</span>
                                            @if (isOverdue)
                                            {
                                                <i class="fas fa-exclamation-triangle text-danger ms-1"></i>
                                            }
                                        </td>
                                        <td>
                                            @if (review.IsCompleted)
                                            {
                                                <span class="badge bg-success">مكتمل</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">معلق</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!review.IsCompleted)
                                            {
                                                <a href="@Url.Action("Create", "Review", new { researchId = review.ResearchId })" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-edit me-1"></i>مراجعة
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Details", "Review", new { id = review.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>عرض
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-clipboard-check fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">لا توجد مراجعات معلقة</h5>
                        <p class="text-muted">لا توجد بحوث تحتاج إلى مراجعة في الوقت الحالي</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Dashboard specific scripts for reviewer
        $(document).ready(function() {
            // تحديث الإحصائيات كل 5 دقائق
            setInterval(function() {
                refreshReviewerStats();
            }, 300000);

            // تفعيل التلميحات
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function refreshReviewerStats() {
            $.ajax({
                url: '@Url.Action("GetQuickStats", "Dashboard")',
                type: 'GET',
                success: function(data) {
                    if (data.success) {
                        updateStats(data.data);
                    }
                },
                error: function() {
                    console.log('خطأ في تحديث الإحصائيات');
                }
            });
        }

        function updateStats(data) {
            if (data.total !== undefined) {
                $('.card-body h3').eq(0).text(data.total);
            }
            if (data.completed !== undefined) {
                $('.card-body h3').eq(1).text(data.completed);
            }
            if (data.pending !== undefined) {
                $('.card-body h3').eq(2).text(data.pending);
            }
            if (data.overdue !== undefined) {
                $('.card-body h3').eq(3).text(data.overdue);
            }
        }

        // تنبيه للمراجعات المتأخرة
        @if (Model.OverdueReviews > 0)
        {
            <text>
                    // عرض تنبيه للمراجعات المتأخرة
                    setTimeout(function() {
                        if (@Model.OverdueReviews > 0) {
                            showNotification('لديك @Model.OverdueReviews مراجعة متأخرة، يرجى إكمالها في أسرع وقت', 'warning');
                        }
                    }, 2000);
            </text>
        }

        function showNotification(message, type) {
            var alertClass = 'alert-info';
            if (type === 'warning') alertClass = 'alert-warning';
            if (type === 'success') alertClass = 'alert-success';
            if (type === 'danger') alertClass = 'alert-danger';

            var notification = `
                <div class="alert ${alertClass} alert-dismissible fade show position-fixed"
                     style="top: 100px; right: 20px; z-index: 9999; min-width: 350px;" role="alert">
                    <i class="fas fa-bell me-2"></i>${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;

            $('body').append(notification);

            // إخفاء التنبيه تلقائياً بعد 5 ثوان
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        }
    </script>
}

