@{
    ViewData["Title"] = "دور غير معروف";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-user-question fa-4x text-warning"></i>
                    </div>

                    <h2 class="text-warning mb-3">دور المستخدم غير معروف</h2>

                    <p class="lead text-muted mb-4">
                        دور المستخدم الخاص بك غير معترف به في النظام.
                        يرجى التواصل مع مدير النظام لحل هذه المشكلة.
                    </p>

                    <div class="alert alert-info">
                        <strong>معلومات المستخدم:</strong><br>
                        الاسم: @ViewData["UserName"]<br>
                        الدور: @ViewData["UserRole"]
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-3">
                            <i class="fas fa-home me-2"></i>العودة للرئيسية
                        </a>

                        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-out-alt me-2"></i>تسجيل الخروج
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>